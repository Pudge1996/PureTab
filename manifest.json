{
	"manifest_version": 2,
	"name": "PureTab",
	"version": "1.0",
	"description": "最简单的Chrome插件demo，需要快速做一个简单的插件时可以基于这个仓库开发",
	"author": "Pudge",
	"icons":
	{
		"48": "icon.png",
		"128": "icon.png"
  },
  "background":
	{
		"page": "newtab.html"
	},
	"browser_action": 
	{
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"web_accessible_resources": 
	[
		"inject.js"
  ],
  "chrome_url_overrides":
  {
		"newtab": "newtab.html"
	}
}